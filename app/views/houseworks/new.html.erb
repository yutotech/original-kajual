<div class="container">
    <div class="text-center pt-5 mb-5">
        <h1>家事分担リスト</h1>
    </div>
    
    <div class="row">
        <div class="col-sm-4">
            <h3>家事の追加</h3>
    
            <%= form_with(model: @housework, local: true) do |f|  %>
                <%= render "layouts/error_messages", model: f.object %>
            
                <div class="form-group">
                    <%= f.label :category, "カテゴリ" %>
                    <%= f.text_field :category, class: "form-control" %>
                </div>
                
                <div class="form-group">
                    <%= f.label :name, "項目" %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                
                <div class="form-group">
                    <%= f.label :goal, "目標" %>
                    <%= f.number_field :goal, class: "form-control" %>
                </div>
                
                <div class="form-group">
                    <%= f.label :frequency, "頻度" %>
                    <%= f.text_field :frequency, class: "form-control" %>
                </div>
                
                <%= f.submit "追加", class: "btn btn-primary btn-block" %>
            <% end %>
        </div>
        
        <div class="col-sm-8">
            <%= render "users/current_user" %>
            <%= render "current_user_houseworks", current_user_houseworks: @current_user_houseworks %>
            
            <%= render "users/partner" %>
            <%= render "partner_houseworks", partner_houseworks: @partner_houseworks %>
        </div>
        
    </div>
</div>


